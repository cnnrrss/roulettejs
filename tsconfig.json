{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "pretty": true
  },
  "include": [
    "./src**/*"
  ]
}
